	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug IBM Logo",
			"cargo": {
				"args": [
					"build",
					"--bin=chip-8",
					"--package=chip-8"
				],
				"filter": {
					"name": "chip-8",
					"kind": "bin"
				}
			},
			"args": ["./roms/ibm.ch8"],
			"cwd": "${workspaceFolder}"
		},
	]
}